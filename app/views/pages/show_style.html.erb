<div class="container_sakura_style">
  <%= image_tag 'SAKURA.png' %>
</div>

<!-- Ã©lement .page contenant les 3 parties : nav_left / main / nav_right -->

<div class="page_style">

  <div class="left_style">
    <h3>
      <div class="glitch_logo" data-text="SAKURA">SAKURA
      </div>
    </h3>
    <br>
    <div class="styles_links">
      <% @styles.each do |style| %>
        <h3>
          <%= link_to ("#{style.name}"), show_style_path(style)%>
        </h3>
      <% end %>
      <br>
      <h3><%= link_to 'ver todos', home_FW_2017_path %></h3>
    </div>
  </div>


  <section class="style_container">
    <div class="style_title_container">
      <div class="style_title">
        <h1><%=@style.name%></h1>
      </div>
    </div>
    <div>
      <% @photos.each do |photo| %>
        <div class="photo"></div>
          <%= link_to show_photo_path(photo) do %>
            <div class="photo_image" style="position: relative;z-index: <%= [100, 102].sample %>" >
              <%= image_tag photo.image %>
            </div>
          <% end %>
        <% end %>
      </div>
  </section>

  <div class="right_style">
    <h3>
      <div class="comprar">
        <%= link_to 'comprar #', home_FW_2017_path %>
      </div>
    </h3>
    <br>
    <div class="socials_links">
      <h3><%= link_to 'contactanos #', home_FW_2017_path %></h3>
      <h3><%= link_to 'instagram #',  home_FW_2017_path %></h3>
      <h3><%= link_to 'facebook #', home_FW_2017_path %></h3>
    </div>
  </div>
</div>
